<%include ./partials/header%>

<div class="ui main text container segment">
    <div class="ui huge header">New Post</div>

    <form class="ui form" action="/blog" method="POST">
        <div class="field">
            <label>Title</label>
            <input required type="text" name="post[title]" placeholder="title">
        </div>

        <div class="field">
            <label>Image URL</label>
            <input required type="text" name="post[image]" placeholder="image url">
        </div>

        <div class="field">
            <label>Content</label>
            <textarea required name="post[body]" placeholder="content" cols="30" rows="10"></textarea>
        </div>

        <div class="field">
            <input class="ui green basic button" type="submit">
        </div>
    </form>
</div>

<%include ./partials/footer%>