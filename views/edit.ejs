<%include ./partials/header%>

<div class="ui main text container segment">
    <div class="ui huge header">Edit Post</div>

    <form class="ui form" action="/blog/<%=post._id%>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <input required type="text" name="post[title]" value="<%=post.title%>">
        </div>

        <div class="field">
            <label>Image URL</label>
            <input required type="text" name="post[image]" value="<%=post.image%>">
        </div>

        <div class="field">
            <label>Content</label>
            <textarea required name="post[body]" cols="30" rows="10"><%=post.body%></textarea>
        </div>

        <div class="field">
            <input class="ui green basic button" type="submit">
        </div>
    </form>
</div>

<%include ./partials/footer%>